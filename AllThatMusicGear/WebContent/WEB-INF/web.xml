<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://java.sun.com/xml/ns/javaee" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
		id="WebApp_ID" 
		version="2.5">
  <display-name>AllThatMusicGear</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>LogAndRegServlet</display-name>
    <servlet-name>LogAndRegServlet</servlet-name>
    <servlet-class>allthatmusicgear.servlets.LogAndRegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogAndRegServlet</servlet-name>
    <url-pattern>/LogAndRegServlet</url-pattern>
    <url-pattern>/LogAndRegServlet/Login/*</url-pattern>
    <url-pattern>/LogAndRegServlet/Register/*</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>allthatmusicgear.listeners.LogAndRegListener</listener-class>
  </listener>
  <resource-ref> <!-- Adds customer datasource to web application -->
	<!-- CustomerDatasource: the name of the datasource that represents your Derby database.-->
	 	<res-ref-name>jdbc/AllThatMusicGearDatasource</res-ref-name>
	 	<res-type>javax.sql.DataSource</res-type>
	 	<res-auth>Container</res-auth>
	</resource-ref> 
</web-app>